# Firebase Cloud Messaging (for mobile push notifications)
FCM_SERVER_KEY=your-fcm-server-key

# SMTP Configuration (optional - defaults to Gmail)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
